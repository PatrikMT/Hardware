<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lightOn"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="18dp"
        android:text="LIGAR"
        app:layout_constraintBottom_toTopOf="@+id/lightOff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lightOff"
        android:layout_width="117dp"
        android:layout_height="41dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="400dp"
        android:text="DESLIGAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightOn" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="151dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="31dp"
        android:onClick="abrirMapa"
        android:text="Abrir Mapa"
        android:textColorHighlight="#E10D0D"
        android:textColorLink="#C51111"
        app:iconTint="#BA1D1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightOff"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#D11C1C" />
</androidx.constraintlayout.widget.ConstraintLayout>